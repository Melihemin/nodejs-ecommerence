<form action="/ilanlar/test" method="POST" enctype="multipart/form-data">
					<div class="row">
						<div class="offset-2 col-md-8">
							<div class="form-group">
								<input class="form-control" name="title" type="text" placeholder="Başlık *" required="required" data-validation-required-message="Please enter your Email.">
								<br><select class="form-control" name="category">
									{{#each categories}}
										<option value="{{id}}">{{cname}}</option>
									{{/each}}
								</select>
								<br><input class="form-control" name="m2" type="select" placeholder="m² *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="m2fiyati" type="text" placeholder="m² Fiyatı *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="imardurumu" type="text" placeholder="İmar Durumu *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="adano" type="text" placeholder="Ada Numarası *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="parselno" type="text" placeholder="Parsel Numarası *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="paftano" type="text" placeholder="Pafta Numarası *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="kaks" type="text" placeholder="Kaks(Emsal) *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="gabari" type="text" placeholder="Gabari *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="tapudurumu" type="text" placeholder="Tapu Durumu *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="katkarsilik" type="text" placeholder="Kat Karşılık *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="krediuygunluk" type="text" placeholder="Kredi Uygunluk Durumu *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="takas" type="text" placeholder="Takas Uygunluk Durumu *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="adres" type="text" placeholder="Adres *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="cash" type="text" placeholder="Fiyat *" required="required" data-validation-required-message="Please enter your Email.">
								<br><input class="form-control" name="post_image" type="file" required="required" data-validation-required-message="Please enter your Email.">
								<p class="help-block text-danger"></p>
							</div>
							{{!-- <div class="form-group">
								<input class="form-control" name="post_image" type="file" required="required" data-validation-required-message="Please enter your Email.">
								<p class="help-block text-danger"></p>
							</div> --}} 
							<div class="form-group">
								<textarea class="form-control" name="content" placeholder="Post Content *" required="required" data-validation-required-message="Please enter a message."></textarea>
								<p class="help-block text-danger"></p>
							</div>
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="main-btn" type="submit">Add</button>
						</div>
					</div>
				</form>
			</div>
